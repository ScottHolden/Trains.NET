<Project>

  <PropertyGroup>
    <RestoreSources>
      https://api.nuget.org/v3/index.json;
    </RestoreSources>
  </PropertyGroup>
  
  <ItemGroup>

    <!-- Updates - Opt-in per project -->
    
    <PackageReference Update="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0-beta2.final" />

    <!-- DI -->
    <PackageReference Update="Microsoft.Extensions.DependencyInjection" Version="5.0.0-preview.6.20305.6" />

    <!-- SkiaSharp -->
    <PackageReference Update="SkiaSharp"                    Version="2.80.1" />
    <PackageReference Update="SkiaSharp.Views.WindowsForms" Version="2.80.1" />
    <PackageReference Update="SkiaSharp.Views.WPF"          Version="2.80.1" />
    
    <!-- Includes - for all projects -->
    
    <!-- Latest C# compiler -->
    <PackageReference Include="Microsoft.Net.Compilers.Toolset" Version="3.7.0-4.final">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  
    <!-- Nerdbank GitVersioning -->
    <PackageReference Include="Nerdbank.GitVersioning" Version="3.2.27-beta">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    
  </ItemGroup>
  
</Project>
